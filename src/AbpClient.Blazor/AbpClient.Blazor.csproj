    <Folder Include="wwwroot\javascript\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\AbpClient.Common\AbpClient.Common.csproj" />
    <ProjectReference Include="..\MatBlazor\MatBlazor.csproj" />
  </ItemGroup>

